<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:id="@+id/dashboard_root"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:animation="@anim/fade_in">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Blood Donor"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/poppins_bold"/>

        <!-- Post Blood Request Button (only for Donors) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/card_post_request">

            <Button
                android:id="@+id/btn_post_request"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Post Blood Request"
                android:background="@android:color/transparent"
                android:textColor="#B00020"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"/>
        </androidx.cardview.widget.CardView>

        <!-- View Blood Requests Button (only for Donors) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/card_view_requests">

            <Button
                android:id="@+id/btn_view_requests"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="View Blood Requests"
                android:background="@android:color/transparent"
                android:textColor="#B00020"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"/>
        </androidx.cardview.widget.CardView>

        <!-- Find Donors Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <Button
                android:id="@+id/btn_find_donors"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Find Donors"
                android:background="@android:color/transparent"
                android:textColor="#B00020"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"/>
        </androidx.cardview.widget.CardView>

        <!-- Donation History Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <Button
                android:id="@+id/btn_donation_history"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Donation History"
                android:background="@android:color/transparent"
                android:textColor="#B00020"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"/>
        </androidx.cardview.widget.CardView>

        <!-- Profile Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="My Profile"
                android:background="@android:color/transparent"
                android:textColor="#B00020"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
