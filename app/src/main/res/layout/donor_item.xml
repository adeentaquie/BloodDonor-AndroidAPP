<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_dark"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView android:id="@+id/donor_name"
        android:text="Donor Name"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView android:id="@+id/donor_blood_group"
        android:text="Blood: A+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="18sp"/>

    <TextView android:id="@+id/donor_city"
        android:text="City: Lahore"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="italic"/>

    <TextView android:id="@+id/donor_phone"
        android:text="Phone: 0300XXXXXXX"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="italic"/>

    <Button android:id="@+id/btn_call_donor"
        android:text="Call"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#B00020"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>
