<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_gradient_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Blood Group -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Blood Group"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_bold" />

        <Spinner
            android:id="@+id/spinner_blood_group"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <!-- Urgency -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Urgency Level"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_bold" />

        <Spinner
            android:id="@+id/spinner_urgency"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <!-- Select Location Button -->
        <Button
            android:id="@+id/btn_select_location"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Select Location on Map"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_bold"
            android:backgroundTint="#FFFFFF"
            android:textColor="#B00020" />

        <!-- Hospital -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital Name"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_bold" />

        <EditText
            android:id="@+id/input_hospital"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Hospital Name"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_regular" />

        <!-- City -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold" />

        <EditText
            android:id="@+id/input_location"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="City"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_regular" />

        <!-- Latitude -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold" />

        <EditText
            android:id="@+id/input_latitude"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Latitude"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_regular"
            android:inputType="numberDecimal" />

        <!-- Longitude -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold" />

        <EditText
            android:id="@+id/input_longitude"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Longitude"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_regular"
            android:inputType="numberDecimal" />

        <!-- Contact -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold" />

        <EditText
            android:id="@+id/input_contact"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Contact Number"
            android:inputType="phone"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_regular" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_submit_request"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Submit Request"
            android:textColor="#B00020"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/poppins_bold" />
    </LinearLayout>
</ScrollView>
